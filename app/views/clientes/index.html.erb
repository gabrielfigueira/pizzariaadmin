<%- model_class = Cliente -%>
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="page-header">
      <h3><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h3>
    </div>

    <div class="row">
      <div class="col-md-12">
        <!--    Hover Rows  -->
        <div class="panel panel-default">
          <div class="panel-body">
            <%= link_to new_cliente_path, class: 'btn btn-primary' do %><i class="fa fa-plus"></i> Novo<% end %>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th><%= model_class.human_attribute_name :nome %></th>
                    <th><%= model_class.human_attribute_name :cpf %></th>
                    <th class="text-right"></th>
                  </tr>
                </thead>
                <tbody>
                  <% @clientes.each do |cliente| %>
                    <tr>
                      <td><%= cliente.nome %></td>
                      <td><%= cliente.cpf %></td>
                      <td class="text-right">
                        <%= link_to cliente, class: 'btn btn-sm btn-default', data: {toggle: 'tooltip'}, title: 'Visualizar' do %><i class="fa fa-eye"></i><% end %>
                        <%= link_to edit_cliente_path(cliente), class: 'btn btn-sm btn-primary', data: {toggle: 'tooltip'}, title: 'Editar' do %><i class="fa fa-pencil"></i><% end %>
                        <%= link_to cliente, method: :delete, data: { confirm: 'Confirma a exclusÃ£o deste registro?', toggle: 'tooltip' }, class: 'btn btn-sm btn-danger', title: 'Excluir' do %><i class="fa fa-trash"></i><% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
                <tfoot>
                  <tr>
                    <th colspan="11">
                      <p><%= page_entries_info @clientes %></p>
                    </th>
                  </tr>
                </tfoot>
              </table>
            </div>
          </div>
        </div>
      </div>
    <!-- End  Hover Rows  -->
    </div>
  </div>
</div>

<div class="text-center">
  <%= will_paginate @clientes, renderer: BootstrapPagination::Rails %>
</div>
