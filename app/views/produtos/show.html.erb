<%- model_class = Produto -%>
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="page-header">
      <h3><%=t '.title', :default => [:'helpers.titles.show', 'Visualizar %{model}'], :model => model_class.model_name.human.titleize %></h3>
    </div>

    <div class="panel panel-default">
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-bordered table-show">
            <tbody>
                  <tr>
                <th><%= model_class.human_attribute_name :descricao %></th>
                <td><%= @produto.descricao %></td>
              </tr>
                  <tr>
                <th><%= model_class.human_attribute_name :data_cadastro %></th>
                <td><%= @produto.data_cadastro %></td>
              </tr>
                  <tr>
                <th><%= model_class.human_attribute_name :data_sincronizacao %></th>
                <td><%= @produto.data_sincronizacao %></td>
              </tr>
                </tbody>
          </table>
        </div>
      </div>
      <div class="panel-footer text-center">
        <%= link_to edit_produto_path(@produto), class: 'btn btn-primary btn-lg' do %><i class="fa fa-pencil"></i> Editar<% end %>
        <%= link_to produtos_path, class: 'btn btn-default btn-lg' do %><i class="fa fa-undo"></i> Voltar<% end %>
      </div>
    </div>
  </div>
</div>
