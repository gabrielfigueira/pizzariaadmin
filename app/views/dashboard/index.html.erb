<div id="page-wrapper">
  <div class="container-fluid">
    <h4>Comandas</h4>
    <div class="row">
      <div class="col-sm-6">
        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>Cliente</th>
              <th>Mesa</th>
            </tr>
          </thead>
          <tbody>
            <% Comanda.all.each do |comanda| %>
              <tr class="<%= comanda.data_hora_finalizacao.present? ? 'danger' : 'success' %>">
                <td><%= comanda.cliente.nome %></td>
                <td>
                  <%= link_to edit_comanda_path(comanda), class: "btn btn-link" do %>
                     <%= comanda.mesa %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="col-sm-6">
      </div>
    </div>
  </div>
</div>

